@{
    ViewData["Title"] = "Vote";
}
<div class="text-center">
    <h5>@Html.Raw(ViewBag.Message)</h5>
</div>

@foreach (var ballot in Model)
{
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <h5 class="card-title">@ballot.LastName</h5>
            <p class="card-text">There can be some information about this president</p>
            <form method="post" action="/Vote/Index">
                <input type="hidden" name="Id" value="@ballot.Id" />
                <button type="submit" class="btn btn-primary">Vote</button>
            </form>
        </div>
    </div>
}


